<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
	<PackageId>FabianLucena.RFNRabbitMQ</PackageId>
	<Version>1.0.0</Version>
	<Authors>Fabian Lucena</Authors>
	<Description>Librería .NET base para implementar servicios RPC sobre RabbitMQ, utilizada por FabianLucena.RFNRabbitMQRPCApp y FabianLucena.RFNRabbitMQRPCClient.</Description>
	<PackageTags>rpc;rabbitmq;messaging;dotnet;microservices;queue;broker</PackageTags>
	<RepositoryUrl>https://github.com/fabianlucena/rfn-rabbitmq</RepositoryUrl>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
	<PublishRepositoryUrl>true</PublishRepositoryUrl>
	<EmbedUntrackedSources>true</EmbedUntrackedSources>
	<IncludeSymbols>true</IncludeSymbols>
	<SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="10.0.0" />
    <PackageReference Include="RabbitMQ.Client" Version="7.2.0" />
  </ItemGroup>

</Project>
